<%- if controller_name != 'sessions' %>
  <%= link_to t(:sign_in), new_session_path(resource_name), class: 'button secondary radius no-mb' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to t(:forgot_password), new_password_path(resource_name), class: 'button secondary radius no-mb' %><br />
<% end -%>
