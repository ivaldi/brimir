<% unless @user.current_sign_in_at.blank? %>
  <p>
    <a href="<%= ticket_url(@ticket) %>" target="_blank">
      <%= t(:view_new_ticket, locale: @locale) %> &raquo;
    </a>
  </p>
<% end %>

<% if @ticket.content_type == 'html' %>
  <%= sanitize_html(@ticket.content) %>
<% else %>
  <pre><%= @ticket.content %></pre>
<% end %>
