<%- unless @user.current_sign_in_at.blank? -%>
<%= t(:view_new_ticket, locale: @locale) %>: <%= ticket_url(@ticket) %>
<%- end -%>

<%- if @ticket.content_type == 'html' -%>
<%= html_to_text @ticket.content -%>
<%- else -%>
<%= @ticket.content -%>
<%- end -%>
