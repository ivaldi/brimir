<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
      <meta charset="utf-8" />
      
      <!-- Set the viewport width to device width for mobile -->
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      
      <title><%= content_for?(:title) ? yield(:title) : 'Brimir' %></title>
    
      <%= stylesheet_link_tag    "application" %>
      
      <%= javascript_include_tag "application" %>
    
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="top-bar">
      <ul>
        <li class="name">
          <h1>
            <a href="<%= root_path %>">
              Brimir
            </a>
          </h1>
        </li>
        <li class="toggle-topbar"><a href="#"></a></li>
      </ul>
      <section>
        <% if user_signed_in? %>
          <ul class="left">
            <li class="divider"></li>
            <li>
              <%= link_to 'All tickets', root_path %>
            </li>
            <li class="divider"></li>
          </ul>        
          <ul class="right">
            <li class="divider"></li>
            <li class="has-dropdown">
              <a href="#"><%= current_user.email %></a>
              <ul class="dropdown">
                <li>
                  <%= link_to 'Settings', edit_user_path(current_user) %>
                </li>
                <li>
                  <%= link_to 'Sign out', :destroy_user_session, method: :delete %>
                </li>
              </ul>
            </li>
          </ul>
   	    <% end %>
      </section>
    </nav>

    <% if notice %>
        <div class="row">
          <div class="twelve columns">
              <div class="alert-box success"><%= notice %><a href="#" class="close">&times;</a></div>
          </div>
        </div>
    <% end %>
    <% if alert %>
        <div class="row">
          <div class="twelve columns">
              <div class="alert-box alert"><%= alert %><a href="#" class="close">&times;</a></div>
          </div>
        </div>
    <% end %>
    
    <%= yield %>

    <div data-dialog class="reveal-modal">
      <article>
      </article>
      <a class="close-reveal-modal">&#215;</a>
    </div>

  </body>
</html>
